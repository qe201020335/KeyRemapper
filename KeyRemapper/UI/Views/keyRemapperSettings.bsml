<vertical child-control-height='false' preferred-width='120'>
    <macro.define id="tab-width" value="90"/>
    <tab-selector tab-tag='tabs'/>

    <!-- Pause Tab -->
    <tab tags="tabs" tab-name="Pause">
        <horizontal child-control-width='false' child-expand-width='false' pref-height='65' vertical-fit='PreferredSize'>
            <!-- 左侧面板 (列表区) -->
            <vertical pref-width='70' min-width='70' pad-right='2'>
                <list id='pauseBindingsList' visible-cells='6'/>
                <text id="pauseEmptyBindingsText" text="No key bindings added" font-size="3.5" color="#808080" align="Center" visible='true'/>
            </vertical>
            
            <!-- 滚动条容器 -->
            <vertical pref-width='8' id='pauseScrollBarContainer' vertical-fit='Unconstrained'/>

            <!-- 右侧面板 (控制区) -->
            <vertical pref-width='40' min-width='35' spacing='2' pad-left='2'>
                <toggle-setting text="Enable" value="pause-enabled" apply-on-change="true"/>
                <toggle-setting text="Block Built-in Pause" value="pause-block-builtin" apply-on-change="true"/>
                <button text="+ Add Key Binding" on-click="add-pause-binding" pref-height="8"/>
            </vertical>
        </horizontal>
    </tab>

    <!-- Restart Tab -->
    <tab tags="tabs" tab-name="Restart">
        <horizontal child-control-width='false' child-expand-width='false' pref-height='65' vertical-fit='PreferredSize'>
            <!-- 左侧面板 (列表区) -->
            <vertical pref-width='70' min-width='70' pad-right='2'>
                <list id='restartBindingsList' visible-cells='6'/>
                <text id="restartEmptyBindingsText" text="No key bindings added" font-size="3.5" color="#808080" align="Center" visible='true'/>
            </vertical>
            
            <!-- 滚动条容器 -->
            <vertical pref-width='8' id='restartScrollBarContainer' vertical-fit='Unconstrained'/>

            <!-- 右侧面板 (控制区) -->
            <vertical pref-width='40' min-width='35' spacing='2' pad-left='2'>
                <toggle-setting text="Enable" value="restart-enabled" apply-on-change="true"/>
                <button text="+ Add Key Binding" on-click="add-restart-binding" pref-height="8"/>
            </vertical>
        </horizontal>
    </tab>
</vertical>